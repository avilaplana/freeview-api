# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                               controllers.Application.index

GET     /channels                           			controllers.TVChannelController.channels

GET     /channels/:genre                    			controllers.TVChannelController.channelsByGenre(genre)

GET     /genres                    			            controllers.TVChannelGenreController.genres

GET     /tvcontent/channel/:channelName/current       	controllers.TVContentController.currentContent(channelName)

GET     /tvcontent/channel/:channelName/today         	controllers.TVContentController.allContent(channelName)

GET     /tvcontent/channel/:channelName/left          	controllers.TVContentController.contentLeft(channelName)

GET     /tvcontent/:id                      			controllers.TVContentController.tvContentDetails(id)

GET     /tvcontent/genre/:genre/today             		controllers.TVContentController.contentByGenre(genre)

GET     /tvcontent/genre/:genre/current     			controllers.TVContentController.currentContentByGenre(genre)

GET     /tvcontent/genre/:genre/left        			controllers.TVContentController.contentLeftByGenre(genre)

GET     /tvcontent/genres                               controllers.TVContentGenreController.genres


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
